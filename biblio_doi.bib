}
@article{schwab2006alpha,
abstract = {Visual stimulation by repetitive flashes of light can lead to an entrainment of the alpha rhythm in electroencephalogram recordings (also called photic driving). We report a comparison of simultaneously recorded electric and magnetic data in a photic driving experiment, adapted to the individual alpha rhythm of 10 healthy volunteers. We show that there is a stronger frequency entrainment in magnetoencephalogram than in electroencephalogram recordings in all volunteers, which indicates a possible tangential brain activity underlying the dominant entrainment effect. The entrainment in the magnetoencephalogram lasts over significantly more frequencies and is most effective in the region around the individual alpha and a half alpha. For different channels, we found different degrees of entrainment showing topological and time-varying properties. {\textcopyright} 2006 Lippincott Williams {\&} Wilkins, Inc.},
